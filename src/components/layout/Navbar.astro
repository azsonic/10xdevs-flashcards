---
import { Button } from "@/components/ui/button";

const { user } = Astro.locals;
const currentPath = Astro.url.pathname;

// Helper function to determine active state
const isActive = (path: string) => currentPath === path;
const getLinkClass = (path: string) => {
  const baseClass = "transition-colors hover:text-foreground/80";
  return isActive(path) ? `${baseClass} text-foreground font-semibold` : `${baseClass} text-foreground/60`;
};
---

<header
  class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
>
  <div class="container flex h-14 items-center px-4 md:px-8 mx-auto">
    <div class="mr-4 hidden md:flex">
      <a class="mr-6 flex items-center space-x-2" href={user ? "/generate" : "/"}>
        <span class="hidden font-bold sm:inline-block">10xDevs Flashcards</span>
      </a>
      {
        user && (
          <nav class="flex items-center space-x-6 text-sm font-medium">
            <a class={getLinkClass("/generate")} href="/generate">
              Generate
            </a>
            <a class={getLinkClass("/library")} href="/library">
              Library
            </a>
            <a class={getLinkClass("/study")} href="/study">
              Study
            </a>
            <a class={getLinkClass("/techstack")} href="/techstack">
              Tech Stack
            </a>
          </nav>
        )
      }
    </div>
    <div class="flex flex-1 items-center justify-between space-x-2 md:justify-end">
      <div class="w-full flex-1 md:w-auto md:flex-none"></div>
      <nav class="flex items-center space-x-2">
        {
          user ? (
            <>
              <span class="text-sm text-muted-foreground mr-2" data-test-id="nav-user-email">
                {user.email}
              </span>
              <form action="/api/auth/signout" method="post" data-test-id="nav-logout-form">
                <Button variant="ghost" size="sm" type="submit" data-test-id="nav-logout-button">
                  Logout
                </Button>
              </form>
            </>
          ) : (
            <>
              <a href="/login" data-test-id="nav-login-link">
                <Button variant="ghost" size="sm" data-test-id="nav-login-button">
                  Login
                </Button>
              </a>
              <a href="/register" data-test-id="nav-register-link">
                <Button size="sm" data-test-id="nav-register-button">
                  Register
                </Button>
              </a>
            </>
          )
        }
      </nav>
    </div>
  </div>
</header>
